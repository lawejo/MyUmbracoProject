@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;

    //Dynamic Title

    var facicon = Umbraco.Media(Guid.Parse("48ab08dc-397c-41db-8c01-74c293c22e9d"));



    string faviconUrl = string.Empty;



    if (facicon != null)

    {

        faviconUrl = facicon.Url();
    }

    var pageTitle = Model.Value<string>("pageTitle");
    var title = !string.IsNullOrWhiteSpace(pageTitle) ? pageTitle : "Apply Agency";



    //Dynamic BG Image



    var bgImageMedia = Model.Value<IPublishedContent>("bgImage");

    string bgImageUrl = string.Empty;

    if (bgImageMedia != null)
    {
        bgImageUrl = bgImageMedia.Url();

    }
}



<!DOCTYPE HTML>
<html>
<head>
    <title>@title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="icon" type="image/x-icon" href="@faviconUrl">

</head>

<body>

    <!-- Navigation -->
    @{
        var selection = Umbraco.ContentAtRoot().FirstOrDefault()

        .Children()

        .Where(x => x.IsVisible());
    }

    <nav class="navbar">
        <a class="navbar-brand" href="/">apply:</a>
        <!-- Links -->
        <ul>
            @foreach (var item in selection)
            {
                <li>
                    <a href="@item.Url()">@item.Name()</a>
                </li>
            }
        </ul>
        <a href="https://www.apply.agency/kontakt" class="kontakt-os">Kontakt</a>
    </nav>
    <div class="bg-section" style="background-image: url('@bgImageUrl');">
    </div>
    @RenderBody()

    <!-- Footer -->
    <div class="container-fluid footer">
        <div class="container">

            @Model.Value("footerText")

        </div>
    </div>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</body>
</html>	